{
    "database": {
        "rules": "database.rules.json"
    },
    "hosting": [
        {
            "target": "discord",
            "public": "empty",
            "rewrites": [
                {
                    "source": "**",
                    "destination": "/"
                }
            ],
            "redirects": [
                {
                    "source": "/",
                    "destination": "https://discord.com/invite/ZrXRpZq2mq/",
                    "type": 301
                }
            ]
        },
        {
            "target": "github",
            "public": "empty",
            "rewrites": [
                {
                    "source": "**",
                    "destination": "/"
                }
            ],
            "redirects": [
                {
                    "source": "/",
                    "destination": "https://github.com/JackyKit123/randomdice.gg",
                    "type": 301
                }
            ]
        },
        {
            "target": "patreon",
            "public": "empty",
            "rewrites": [
                {
                    "source": "**",
                    "destination": "/"
                }
            ],
            "redirects": [
                {
                    "source": "/",
                    "destination": "https://www.patreon.com/RandomDiceCommunityWebsite",
                    "type": 301
                }
            ]
        },
        {
            "target": "website",
            "public": "build",
            "ignore": [
                "firebase.json",
                "**/.*",
                "**/node_modules/**"
            ],
            "redirects": [
                {
                    "source": "/discord",
                    "destination": "https://discord.com/invite/ZrXRpZq2mq/",
                    "type": 301
                },
                {
                    "source": "/github",
                    "destination": "https://github.com/JackyKit123/randomdice.gg",
                    "type": 301
                },
                {
                    "source": "/patreon",
                    "destination": "https://www.patreon.com/RandomDiceCommunityWebsite",
                    "type": 301
                }
            ],
            "rewrites": [
                {
                    "source": "**",
                    "destination": "/index.html"
                }
            ],
            "headers": [
                {
                    "source": "/service-worker.js",
                    "headers": [
                        {
                            "key": "Cache-Control",
                            "value": "no-cache"
                        }
                    ]
                },
                {
                    "source": "/index.html",
                    "headers": [
                        {
                            "key": "Cache-Control",
                            "value": "no-cache"
                        }
                    ]
                }
            ]
        }
    ],
    "storage": {
        "rules": "storage.rules"
    },
    "functions": {
        "predeploy": [
            "npm --prefix \"$RESOURCE_DIR\" run lint",
            "npm --prefix \"$RESOURCE_DIR\" run build"
        ],
        "source": "functions"
    }
}