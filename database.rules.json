{
    "rules": {
        ".write": false,
        "decks": {
            ".read": true,
            ".write": "auth.token.isEditor === true"
        },
        "decks_guide": {
            ".read": true,
            ".write": "auth.token.isEditor === true"
        },
        "dice": {
            ".read": true,
            ".write": "auth.token.isEditor === true"
        },
        "wiki": {
            ".read": true,
            ".write": "auth.token.isEditor === true"
        },
        "news": {
            ".read": true,
            ".write": "auth.token.isEditor === true"
        },
        "credit": {
            ".read": true,
            ".write": "auth.token.isEditor === true"
        },
        "token_storage": {
            ".read": "auth.uid === 'my-service-worker'",
            ".write": "auth.uid === 'my-service-worker'"
        },
        "users": {
            ".read": "auth.uid === 'my-service-worker'",
            ".write": "auth.uid === 'my-service-worker'",
            "$uid": {
                ".read": "auth.uid === $uid || auth.uid === 'my-service-worker'",
                ".write": "auth.uid === $uid",
                "editor": {
                  ".write": false
                },
                "linked-account": {
                    ".write": "auth.uid === 'my-service-worker'"
                },
                "patreon-tier": {
                    ".write": "auth.uid === 'my-service-worker'"
                }
            }
        }
    }
}
